<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A1A1A"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Livingroom Row -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:fontFamily="sans-serif"
        android:text="GLaDOS portable controller"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.GladosWidget.Label"
            android:layout_width="@dimen/widget_label_width"
            android:layout_height="wrap_content"
            android:text="Livingroom" />

        <Button
            android:id="@+id/btn_livingroom_on"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:layout_marginEnd="4dp"
            android:text="On" />

        <Button
            android:id="@+id/btn_livingroom_off"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:text="Off" />
    </LinearLayout>

    <!-- Bedroom Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.GladosWidget.Label"
            android:layout_width="@dimen/widget_label_width"
            android:layout_height="wrap_content"
            android:text="Bathroom" />

        <Button
            android:id="@+id/btn_bathroom_on"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:layout_marginEnd="4dp"
            android:text="On" />

        <Button
            android:id="@+id/btn_bathroom_dim"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:text="Dim" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.GladosWidget.Label"
            android:layout_width="@dimen/widget_label_width"
            android:layout_height="wrap_content"
            android:text="Bedroom" />

        <Button
            android:id="@+id/btn_bedroom_on"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:layout_marginEnd="4dp"
            android:text="On" />

        <Button
            android:id="@+id/btn_bedroom_off"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:text="Off" />
    </LinearLayout>

    <!-- Bathroom Row (new) -->

    <!-- Alarm Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.GladosWidget.Label"
            android:layout_width="@dimen/widget_label_width"
            android:layout_height="wrap_content"
            android:text="Sonos" />

        <Button
            android:id="@+id/btn_sonos_on"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:layout_marginEnd="4dp"
            android:text="On" />

        <Button
            android:id="@+id/btn_sonos_off"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:text="Off" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.GladosWidget.Label"
            android:layout_width="@dimen/widget_label_width"
            android:layout_height="wrap_content"
            android:text="Alarm" />

        <Button
            android:id="@+id/btn_alarm_on"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:layout_marginEnd="4dp"
            android:text="On" />

        <Button
            android:id="@+id/btn_alarm_off"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:text="Off" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/Widget.GladosWidget.Label"
            android:layout_width="@dimen/widget_label_width"
            android:layout_height="wrap_content"
            android:text="â”” Set Time"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:text="TODO"
            android:layout_marginEnd="4dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_alarm_send"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:layout_marginEnd="4dp"
            android:text="Send" />

    </LinearLayout>

    <!-- Sonos Row -->

</LinearLayout>
