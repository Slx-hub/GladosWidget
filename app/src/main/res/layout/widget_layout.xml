<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#1A1A1A">

    <!-- Livingroom Row -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:fontFamily="sans-serif"
        android:text="GLaDOS portable controller"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Widget.GladosWidget.Label"
            android:layout_width="@dimen/widget_label_width"
            android:layout_height="wrap_content"
            android:text="Livingroom" />

        <Button
            android:id="@+id/btn_livingroom_on"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:layout_marginEnd="4dp"
            android:text="On" />

        <Button
            android:id="@+id/btn_livingroom_off"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:text="Off" />
    </LinearLayout>

    <!-- Bedroom Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Widget.GladosWidget.Label"
            android:layout_width="@dimen/widget_label_width"
            android:layout_height="wrap_content"
            android:text="Bedroom" />

        <Button
            android:id="@+id/btn_bedroom_on"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:layout_marginEnd="4dp"
            android:text="On" />

        <Button
            android:id="@+id/btn_bedroom_off"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:text="Off" />
    </LinearLayout>

    <!-- Alarm Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/Widget.GladosWidget.Label"
            android:layout_width="@dimen/widget_label_width"
            android:layout_height="wrap_content"
            android:text="Alarm" />

        <Button
            android:id="@+id/btn_alarm_on"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:layout_marginEnd="4dp"
            android:text="On" />

        <Button
            android:id="@+id/btn_alarm_off"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:text="Off" />
    </LinearLayout>

    <!-- Sonos Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            style="@style/Widget.GladosWidget.Label"
            android:layout_width="@dimen/widget_label_width"
            android:layout_height="wrap_content"
            android:text="Sonos" />

        <Button
            android:id="@+id/btn_sonos_reset"
            style="@style/Widget.GladosWidget.Button"
            android:layout_width="@dimen/widget_double_button_width"
            android:layout_height="@dimen/widget_button_height"
            android:text="Reset" />
    </LinearLayout>

</LinearLayout>
